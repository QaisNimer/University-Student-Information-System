@model StudentInformationSystem.Utilities.Dto.LoginDto

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login Page</title>
    <style>
        @@import url('https://fonts.googleapis.com/css?family=Raleway:400,700');

        body {
            background: transparent;
            font-family: 'Raleway', sans-serif;
            color: #000; /* Set text color */
            background-image: url("/app-assets/images/banner/UniPic.jpeg");
            background-repeat: no-repeat;
            background-size: cover;
        }

        .login {
            margin: 100px auto;
            padding: 40px 50px;
            max-width: 300px;
            border-radius: 5px;
            background: #fff;
            box-shadow: 1px 1px 1px #666;
        }

        .login input {
            width: 100%;
            display: block;
            box-sizing: border-box;
            margin: 10px 0;
            padding: 14px 12px;
            font-size: 16px;
            border: 1px solid #c0c0c0;
            border-radius: 2px;
            transition: .2s;
            font-family: 'Raleway', sans-serif;
        }

        .login input[type=text]:hover,
        .login input[type=password]:hover {
            border-color: #F44336;
            outline: none;
            transition: all .2s ease-in-out;
        }

        .login input[type=submit] {
            border: none;
            background: #EF5350;
            color: white;
            font-weight: bold;
            transition: 0.2s;
            margin: 20px 0px;
            cursor: pointer; /* Add cursor pointer */
        }

        .login input[type=submit]:hover {
            background: #F44336;
        }

        .login h2 {
            margin: 20px 0 0;
            color: #EF5350;
            font-size: 28px;
            text-align: center; /* Center align heading */
        }

        .login p {
            margin-bottom: 40px;
            text-align: center; /* Center align paragraph */
        }

        .links {
            display: table;
            width: 100%;
            box-sizing: border-box;
            border-top: 1px solid #c0c0c0;
            margin-bottom: 10px;
        }

        .links a {
            display: table-cell;
            padding-top: 10px;
            text-align: center; /* Center align links */
            text-decoration: none;
            font-size: .8em;
            color: #000; /* Set link color */
        }

        .links a:first-child {
            text-align: left;
        }

        .links a:last-child {
            text-align: right;
        }

        .login a:hover {
            text-decoration: underline;
        }

        /* Styles for validation error messages */
        .field-validation-error {
            color: #FF0000; /* Red color for error messages */
            font-size: 14px; /* Adjust font size as needed */
            margin-top: 5px; /* Add spacing */
        }

        /* Styles for validation summary */
        .validation-summary-errors {
            color: #FF0000; /* Red color for summary error messages */
            font-size: 16px; /* Adjust font size as needed */
            margin-bottom: 10px; /* Add spacing */
        }

    </style>
</head>
<body>
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login" }))
{
    @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" }) <!-- Display validation summary -->
    <h2>Welcome, Student Information Portal!</h2>
    <p>Please log in</p>
    <div class="form-group">
        @Html.LabelFor(m => m.CollegeId)
        @Html.TextBoxFor(m => m.CollegeId, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CollegeId, "", new { @class = "field-validation-error" }) <!-- Display validation error for CollegeId -->
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "field-validation-error" }) <!-- Display validation error for Password -->
    </div>
    <input type="submit" value="Log In" class="btn btn-primary" />
    <div class="links">
        <a href="@Url.Action("ForgetPassword", "Account")">Forgot password</a>
    </div>
}

</body>
</html>
