@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model StudentInformationSystem.Utilities.Dto.CousreViewListDto
<div class="app-content content ">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-9 col-12 mb-2">
                <div class="row breadcrumbs-top">
                    <div class="col-12">
                        <h2 class="content-header-title float-left mb-0">Course</h2>
                        <div class="breadcrumb-wrapper">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="@Url.Action("Index","DashBoard")">DashBoard</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="@Url.Action("CourseSchedule","Course")">Course-Schedule</a>
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="row" id="table-responsive">
            <div class="col-12">
                <div class="card">
                    @using (Html.BeginForm("CourseSchedule", "Course", FormMethod.Get, new { id = "GetCourse", @class = "form" }))
                    {
                        <div class="row mt-5 mb-1">
                            <div class="col-md-4">
                                <div class="form-group ml-1 mr-1">
                                    <label for="CourseName" style="font-weight:700;margin-bottom:5px ;text-align:center;width:100%">Course Name</label>
                                    <input style="margin-bottom:5px;" type="text" id="CourseName" class="form-control" asp-for="@Model.courseRequest.CourseName" />

                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group ml-1 mr-1">
                                    <label for="CourseId" style="font-weight:700;margin-bottom:5px;text-align:center;width:100%">Course Number</label>
                                    <input style="margin-bottom:5px;" type="text" id="CourseNumber" class="form-control" asp-for="@Model.courseRequest.CourseNumber" />

                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group ml-1 mr-1">
                                    <label for="CourseCode" style="font-weight:700;margin-bottom:5px;text-align:center;width:100%">Course Code</label>
                                    <input style="margin-bottom:5px;" type="text" id="CourseCode" class="form-control" asp-for="@Model.courseRequest.CourseCode" />

                                </div>
                            </div>
                            <div class="col-12 d-flex justify-content-end">
                                <div class="form-group ml-1 mr-1 d-flex" style="width: 50%;">
                                    <button type="submit" class="btn btn-primary mr-1" style="width:48%;">Search</button>
                                    <button type="button" class="btn btn-secondary ml-1" style="width:48%;" onclick="clearFields()">Clear</button>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th scope="col" class="text-nowrap">Course Code</th>
                                    <th scope="col" class="text-nowrap">Course Number</th>
                                    <th scope="col" class="text-nowrap">Course Name</th>
                                    <th scope="col" class="text-nowrap">Hour </th>
                                    <th scope="col" class="text-nowrap">Section </th>
                                    <th scope="col" class="text-nowrap">Saturday </th>
                                    <th scope="col" class="text-nowrap">Sunday </th>
                                    <th scope="col" class="text-nowrap">Monday </th>
                                    <th scope="col" class="text-nowrap">Tuesday </th>
                                    <th scope="col" class="text-nowrap">Wednesday </th>
                                    <th scope="col" class="text-nowrap">Thursday</th>
                                    <th scope="col" class="text-nowrap">Teacher name</th>
                                    <th scope="col" class="text-nowrap">Time Form</th>
                                    <th scope="col" class="text-nowrap">Time To</th>
                                    <th scope="col" class="text-nowrap">Available Seat</th>
                                    <th scope="col" class="text-nowrap">Hall No</th>
                                    <th scope="col" class="text-nowrap">Course Nature</th>
                                    <th scope="col" class="text-nowrap">Note</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model.courses)
                                    {
                                        <tr>

                                            <td class="text-nowrap">@item.CourseCode</td>
                                            <td class="text-nowrap">@item.CourseNumber</td>
                                            <td class="text-nowrap">@item.CourseName</td>
                                            <td class="text-nowrap">@item.Credits</td>
                                            <td class="text-nowrap">@item.Section</td>
                                            <td class="text-nowrap">
                                                <input type="checkbox" disabled="disabled" @(item.IsSaturday ? "checked" : "") />
                                            </td>
                                            <td class="text-nowrap">
                                                <input type="checkbox" disabled="disabled" @(item.IsSunday ? "checked" : "") />
                                            </td>
                                            <td class="text-nowrap">
                                                <input type="checkbox" disabled="disabled" @(item.IsMonday ? "checked" : "") />
                                            </td>
                                            <td class="text-nowrap">
                                                <input type="checkbox" disabled="disabled" @(item.IsTuesday ? "checked" : "") />
                                            </td>
                                            <td class="text-nowrap">
                                                <input type="checkbox" disabled="disabled" @(item.IsWednesday ? "checked" : "") />
                                            </td>
                                            <td class="text-nowrap">
                                                <input type="checkbox" disabled="disabled" @(item.IsThursday ? "checked" : "") />
                                            </td>
                                            <td class="text-nowrap">@item.TreacherName</td>
                                            <td class="text-nowrap">@item.TimeForm</td>
                                            <td class="text-nowrap">@item.TimeTo</td>
                                            <td class="text-nowrap">@item.AvailableSeat</td>
                                            <td class="text-nowrap">@item.HallNumber</td>
                                            <td class="text-nowrap">@item.CourseNature</td>
                                            <td class="text-nowrap">@item.Note</td>
                                        </tr>
                                    }

                                }
                                else
                                {
                                    <tr>
                                        <td class="text-nowrap" colspan="17">No Data Found</td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        debugger
        function clearFields() {
            document.getElementById('CourseName').value = '';
            document.getElementById('CourseNumber').value = '';
            document.getElementById('CourseCode').value = '';
            document.getElementById('GetCourse').submit();
        }
    </script>
}
