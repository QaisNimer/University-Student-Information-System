@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model StudentInformationSystem.Utilities.Dto.CourseMarksDto
<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>​

<div class="app-content content ">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-9 col-12 mb-2">
                <div class="row breadcrumbs-top">
                    <div class="col-12">
                        <h2 class="content-header-title float-left mb-0">Marks</h2>
                        <div class="breadcrumb-wrapper">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="@Url.Action("Index","DashBoard")">DashBoard</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="@Url.Action("SemesterDetail","Course")">Marks </a>
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="row" id="table-responsive">
            <div class="col-12">
                <div class="card">
                    @using (Html.BeginForm("SemesterDetail", "Course", FormMethod.Post, new { id = "SemesterDetail", @class = "form" }))
                    {
                        <div class="row mt-5 mb-1">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group ml-1 mr-1">
                                      
                                           <label for="Semester" style="font-weight:700;margin-bottom:5px;">Semester</label>
                                            <select class="custom-select" style="margin-bottom:5px;" asp-for="SemesterId" type="text" id="Semester">
                                                <option value="" selected>Select Semester</option>
                                                    @foreach (var Semester in ViewBag.SemesterList)
                                                    {
                                                        <option value="@Semester.Id">@Semester.SemesterName</option>
                                                    }
                                            </select>

                                            <span id="SemesterValidation" style="Color:red;"></span>
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                            <div class="col-md-6">
                                <div class="form-group ml-1 mr-1">
                                    <dnt-captcha 
                                        asp-captcha-generator-max="999999" 
                                        asp-captcha-generator-min="111111" 
                                        asp-captcha-generator-language="English"
                                        asp-captcha-generator-display-mode="ShowDigits"
                                        asp-use-relative-urls="true"
                                        asp-placeholder="Enter Captcha"
                                        asp-font-name="Tahoma"
                                        asp-font-size="60"
                                        asp-fore-color="#333333"
                                        asp-validation-error-message="Please Insert Valid Captcha"
                                        asp-back-color="#ccc"
                                        asp-text-box-class="text-box form-control"
                                        asp-text-box-template="<span class='input-group-prepend'><span class='form-group-text'> </span></span>{0}"
                                        asp-refresh-button-class="fa fa-refresh btn-sm"
                                        asp-use-noise="false"/>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group ml-1 mr-1">
                                     <button type="submit" class="btn btn-primary mr-1">Search Now</button>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="row mt-5 mb-5">
                         <div class="col-md-12">
                           <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th scope="col" class="text-nowrap">Course Characters</th>
                                        <th scope="col" class="text-nowrap">Course Number</th>
                                        <th scope="col" class="text-nowrap">Course Name</th>
                                        <th scope="col" class="text-nowrap">Section </th>
                                        <th scope="col" class="text-nowrap">Hours </th>
                                        <th scope="col" class="text-nowrap">Mid Term Marks </th>
                                        <th scope="col" class="text-nowrap">Work Marks </th>
                                        <th scope="col" class="text-nowrap">Collection Marks </th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                    @if(Model != null && Model.MarksDto.Count > 0)
                                    {
                                            foreach (var item in Model.MarksDto)
                                            {
                                                <tr>
                                                    <td class="text-nowrap">@item.CourseCharacters</td>
                                                    <td class="text-nowrap">@item.CourseNumber</td>
                                                    <td class="text-nowrap">@item.CourseName</td>
                                                    <td class="text-nowrap">@item.Section</td>
                                                    <td class="text-nowrap">@item.Hours</td>
                                                    <td class="text-nowrap">@item.MidTermMarks</td>
                                                    <td class="text-nowrap">@item.WorkMarks</td>
                                                    <td class="text-nowrap">@item.CollectionMarks</td>
                                                </tr>
                                            }
                                        }
                                    else
                                    {
                                        <tr>
                                            <td class="text-nowrap" colspan="11">No Data Found</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


